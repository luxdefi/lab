{
  "name": "@luxlabs/lab",
  "version": "0.0.1",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/hardhat",
      "packages/nextjs"
    ]
  },
  "scripts": {
    "account": "yarn workspace @luxlabs/hardhat account",
    "chain": "yarn workspace @luxlabs/hardhat chain",
    "deploy": "yarn workspace @luxlabs/hardhat deploy",
    "compile": "yarn workspace @luxlabs/hardhat compile",
    "generate": "yarn workspace @luxlabs/hardhat generate",
    "hardhat:lint": "yarn workspace @luxlabs/hardhat lint",
    "hardhat:lint-staged": "yarn workspace @luxlabs/hardhat lint-staged",
    "hardhat:test": "yarn workspace @luxlabs/hardhat test",
    "start": "yarn workspace @luxlabs/nextjs dev",
    "next:lint": "yarn workspace @luxlabs/nextjs lint",
    "next:format": "yarn workspace @luxlabs/nextjs format",
    "postinstall": "husky install",
    "precommit": "lint-staged"
  },
  "packageManager": "yarn@3.2.3",
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3"
  }
}
